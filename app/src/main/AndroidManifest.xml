<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wangyuanwmm.wmm">

    <!-- 读取Log -->
    <uses-permission android:name="android.permission.READ_LOGS"/>
    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 允许读取手机状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!-- 获取手机录音机使用权限，听写、识别、语义理解需要用到此权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <!-- 允许程序改变网络连接状态 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <!-- 允许打开相机 -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <!-- 窗口权限 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name=".application.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_wmm"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>
        <!-- 设置 -->
        <!-- 登录 -->
        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <!-- 注册页面 -->
        <activity
            android:name=".ui.RegisteredActivity"
            android:label="@string/sign_up"/>
        <!-- 忘记密码页面 -->
        <activity
            android:name=".ui.ForgetPasswordActivity"
            android:label="@string/forgot_password"/>
        <!-- 快递查询页面 -->
        <activity
            android:name=".ui.CourierActivity"
            android:label="@string/courier"/>
        <!-- 个人中心 -->
        <activity
            android:name=".ui.UserActivity"
            android:windowSoftInputMode="stateHidden|stateUnchanged"
            android:label="@string/user_center"/>

        <activity android:name=".detail.DetailActivity"
            android:label="@string/title_activity_read"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.AboutActivity"
            android:label="@string/about" />
        <activity
            android:name=".ui.InnerBrowserActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.SearchActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout"
            android:label="@string/search_bookmarks"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <service android:name=".service.CacheService" />
    </application>

</manifest>